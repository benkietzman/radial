#ifndef _RADIAL_HUB_
#define _RADIAL_HUB_
// {{{ includes
#include "Base"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Hub
class Hub : public Base
{
  private:
  char **m_env;
  time_t m_CLoadModify;

  bool add(string strPrefix, const string strName, const string strAccessFunction, const string strCommand, const unsigned long ulMemory, const bool bRespawn, const bool bRestricted);
  void chat(const string strTarget, const string strMessage);
  bool load(string strPrefix, string &strError);
  void log(const string strFunction, const string strMessage);
  void monitor(string strPrefix);
  void remove(string strPrefix, const string strName);
  void target(radialPacket &p);
  void target(const string t, Json *j, const string s = "");

  public:
  Hub(string strPrefix, int argc, char **argv, char **env, void (*function)(const int));
  ~Hub();
  void alert(const string strMessage);
  void interfaces();
  void links();
  void log(const string strMessage);
  void notify(const string strMessage);
  void process(string strPrefix);
  void setShutdown(string strPrefix, const string strTarget = "", const bool bStop = false);
};
// }}}
}
}
#endif
