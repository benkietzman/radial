#ifndef _RADIAL_HUB_
#define _RADIAL_HUB_
// {{{ includes
#include "Base"
// }}}
extern "C++"
{
namespace radial
{
// {{{ radialHubInterface
struct radialHubInterface
{
  bool bRespawn;
  int fdRead;
  int fdWrite;
  list<string> buffers[2];
  pid_t nPid;
  string strBuffers[2];
  string strCommand;
};
// }}}
// {{{ Hub
class Hub : public Base
{
  private:
  char **m_env;
  map<string, radialHubInterface *> m_interfaces;

  void alert(const string strMessage);
  bool interfaceAdd(const string strName, const string strCommand, const bool bRespawn, string &strError);
  void interfaceRemove(const string strName);
  bool interfacesLoad(string &strError);
  void log(const string strMessage);
  void log(const string strFunction, const string strMessage);
  void notify(const string strMessage);
  void target(const string strTarget, Json *ptJson);

  public:
  Hub(int argc, char **argv, char **env);
  ~Hub();
  void process(string strPrefix);
};
// }}}
}
}
#endif
