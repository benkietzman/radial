extern "C++"
{
namespace radial
{
// {{{ structs
// {{{ radialInterface
struct radialInterface
{
  bool bRespawn;
  bool bRestricted;
  bool bShutdown;
  int fdRead;
  int fdWrite;
  pid_t nPid;
  size_t unMonitor;
  string strAccessFunction;
  string strBuffers[2];
  string strCommand;
  time_t CKill;
  time_t CMonitor[2];
  time_t CShutdown;
  time_t CWrote;
  unsigned long ulMemory;
};
// }}}
// {{{ radialLink
struct radialLink
{
  addrinfo hints;
  addrinfo *result;
  addrinfo *rp;
  bool bAuthenticated;
  bool bNeedWrite;
  bool bRetry;
  bool bWantWrite;
  int fdConnecting;
  int fdSocket;
  list<string> responses;
  map<string, radialInterface *> interfaces;
  size_t unUnique;
  SSL *ssl;
  string strBuffers[2];
  string strNode;
  string strPort;
  string strServer;
};
// }}}
// {{{ radialPacket
struct radialPacket
{
  string d;
  string o;
  string p;
  string s;
  string t;
  string u;
};
// }}}
// }}}
// {{{ Base
class Base
{
  protected:
  bool m_bShutdown;
  char **m_argv, m_cDelimiter;
  int m_argc;
  list<radialLink *> m_l;
  map<string, radialInterface *> m_i;
  map<string, size_t> m_throughput;
  mutex m_mutexBase;
  size_t m_unMaxPayload;
  size_t m_unMonitor;
  size_t m_unThreads;
  size_t m_unWorkers;
  string m_strApplication;
  string m_strCompany;
  string m_strData;
  string m_strEmail;
  string m_strNode;
  string m_strServer;
  string m_strWarden;
  string m_strWebsite;
  time_t m_CMonitor[2];
  unsigned long m_ulMaxResident;
  Central *m_pCentral;
  DateTime m_date;
  File m_file;
  ServiceJunction *m_pJunction;
  StringManip m_manip;
  Utility *m_pUtility;
  Warden *m_pWarden;

  void compress(const string strUncompress, string &strCompress);
  size_t monitor(const pid_t nPid, string &strMessage);
  size_t monitor(const pid_t nPid, time_t CMonitor[2], size_t &unMonitor, unsigned long ulMaxResident, string &strMessage);
  string pack(radialPacket &p, string &d);
  void status(Json *ptStatus);
  void threadDecrement();
  void threadIncrement();
  void uncompress(const string strCompress, string &strUncompress);
  void unpack(const string d, radialPacket &p);

  public:
  Base(int argc, char **argv);
  ~Base();
  bool dep(const list<string> fs, Json *i, string &e);
  bool empty(Json *ptJson, const string strField);
  string esc(const string strValue);
  bool exist(Json *ptJson, const string strField);
  void msleep(const unsigned long ulMilliSec);
  void setShutdown();
  bool shutdown();
};
// }}}
}
}
#endif
