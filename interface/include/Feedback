#ifndef _RADIAL_FEEDBACK_
#define _RADIAL_FEEDBACK_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Feedback
class Feedback : public Interface
{
  protected:
  bool answers(const string strQuestionID, list<map<string, string> > &getAnswer, string &strError);
  bool questions(const string strSurveyID, list<map<string, string> > &getQuestion, string &strError);

  public:
  Feedback(string strPrefix, int argc, char **argv, void (*pCallback)(string, const string strPacket, const bool));
  ~Feedback();
  void callback(string strPrefix, const string strPacket, const bool bResponse);
};
// }}}
}
}
#endif
