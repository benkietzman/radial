#ifndef _RADIAL_WEBSOCKET_
#define _RADIAL_WEBSOCKET_
// {{{ includes
#include <libwebsockets.h>
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
struct data
{ 
  bool bRemove;
  list<string> buffers;
  lws *wsi;
  mutex mutexShare;
  size_t unThreads;
  string strApplication;
  string strBuffers[2];
  string strPassword;
  string strUser;
  string strUserID;
};
// {{{ Websocket
class Websocket : public Interface
{
  protected:
  int (*m_pWebsocket)(struct lws *wsi, enum lws_callback_reasons reason, void *user, void *in, size_t len);
  list<data *> m_conns;
  mutex m_mutexConns;
  string m_strSecret;
  string m_strSigner;

  void request(string strPrefix, data *ptConn, Json *ptJson);

  public:
  Websocket(string strPrefix, int argc, char **argv, void (*pCallback)(string, Json *, const bool), int (*pWebsocket)(lws *wsi, enum lws_callback_reasons reason, void *user, void *in, size_t len));
  ~Websocket();
  void callback(string strPrefix, Json *ptJson, const bool bResponse);
  void socket(string strPrefix, lws_context *ptContext);
  int websocket(lws *wsi, enum lws_callback_reasons reason, void *user, void *in, size_t len);
};
// }}}
}
}
#endif
