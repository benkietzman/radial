#ifndef _RADIAL_REQUEST_
#define _RADIAL_REQUEST_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ radialRequestConn
struct radialRequestConn
{
  SSL *ssl;
  list<string> responses;
  size_t unUnique;
  string strBuffers[2];
  common_socket_type eSocketType;
};
// }}}
// {{{ Request
class Request : public Interface
{
  public:
  Request(string strPrefix, int argc, char **argv, void (*pCallback)(string, Json *, const bool));
  ~Request();
  void callback(string strPrefix, Json *ptJson, const bool bResponse);
  void socket(string strPrefix);
};
// }}}
}
}
#endif
