#ifndef _RADIAL_REQUEST_
#define _RADIAL_REQUEST_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Request
class Request : public Interface
{
  public:
  Request(string strPrefix, int argc, char **argv, void (*pCallback)(string, Json *, const bool));
  ~Request();
  void accept(string strPrefix);
  void callback(string strPrefix, Json *ptJson, const bool bResponse);
  void request(string strPrefix, size_t &unActive, const string strBuffer, list<string> &responses, mutex &mutexResponses);
  void socket(string strPrefix, int fdSocket, SSL_CTX *ctx);
};
// }}}
}
}
#endif
