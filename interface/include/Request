#ifndef _RADIAL_REQUEST_
#define _RADIAL_REQUEST_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Request
class Request : public Interface
{
  protected:
  bool m_bCallback;
  function<bool(string, Json *, string &)> m_callback;

  void request(string strPrefix, Json *ptJson);

  public:
  Request(int argc, char **argv);
  Request(int argc, char **argv, function<bool(string, Json *, string &)> callback);
  ~Request();
  void accept(string strPrefix);
  void socket(string strPrefix, SSL_CTX *ctx, int fdSocket);
};
// }}}
}
}
#endif
