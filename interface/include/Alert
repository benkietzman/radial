#ifndef _RADIAL_ALERT_
#define _RADIAL_ALERT_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Alert
class Alert : public Interface
{
  protected:
  bool (*m_pAnalyzeCallback)(string, const string, const string, const string, map<string, string>, string &);

  public:
  Alert(string strPrefix, int argc, char **argv, void (*pCallback)(string, const string, const bool));
  ~Alert();
  void callback(string strPrefix, const string strPacket, const bool bResponse);
  void setAnalyze(bool (*)(string, const string, const string, const string, map<string, string>, string &));
};
// }}}
}
}
#endif
