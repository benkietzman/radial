#ifndef _RADIAL_EMULATOR_
#define _RADIAL_EMULATOR_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Emulator
class Emulator : public Interface
{
  protected:
  map<string, bool (Emulator::*)(radialUser &, string &)> m_functions;
  mutex m_mutex;

  bool data(radialUser &d, string &e);
  bool launch(radialUser &d, string &e);

  public:
  Emulator(string strPrefix, int argc, char **argv, void (*pCallback)(string, const string, const bool));
  ~Emulator();
  void callback(string strPrefix, const string strPacket, const bool bResponse);
};
// }}}
}
