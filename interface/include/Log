#ifndef _RADIAL_LOG_
#define _RADIAL_LOG_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Log
class Log : public Interface
{
  protected:
  string m_strEmail;

  void internal(string strPrefix, Json *ptJson, const bool bResponse);

  public:
  Log(string strPrefix, int argc, char **argv, function<void(string, Json *, const bool)> callback);
