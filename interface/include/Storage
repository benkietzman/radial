#ifndef _RADIAL_STORAGE_
#define _RADIAL_STORAGE_
// {{{ includes
#include <Storage>
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Storage
class Storage : public Interface
{
  protected:
  bool m_bInitialized;
  mutex mutexCallback;
  mutex mutexInitialize;
  size_t m_unCallbacks;
  string m_strEmail;
  common::Storage m_storage;

  public:
  Storage(string strPrefix, int argc, char **argv, void (*pCallback)(string, Json *, const bool));
  ~Storage();
  void autoMode(string strPrefix, const string strOldMaster, const string strNewMaster);
  void callback(string strPrefix, Json *ptJson, const bool bResponse);
  size_t callbacks();
};
// }}}
}
}
#endif
