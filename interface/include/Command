#ifndef _RADIAL_COMMAND_
#define _RADIAL_COMMAND_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ structs
// {{{ radialCommand
struct radialCommand
{
  bool bJson;
  bool bProcessed;
  pid_t execPid;
  int fdRead;
  int fdWrite;
  size_t unTimeout;
  string strBuffer[2];
  string strError;
  string strPacket;
  timespec start;
  timespec stop;
};
// }}}
// }}}
// {{{ Command
class Command : public Interface
{
  protected:

  public:
  Command(string strPrefix, int argc, char **argv);
  ~Command();
  void process(string strPrefix);
};
// }}}
}
}
#endif
