#ifndef _RADIAL_STATUS_
#define _RADIAL_STATUS_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Status
class Status : public Interface
{
  protected:
  void status(Json *ptStatus);

  public:
  Status(string strPrefix, int argc, char **argv, void (*pCallback)(string, const string strPacket, const bool));
