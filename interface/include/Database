#define _RADIAL_DATABASE_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ Database
class Database : public Interface
{
  protected:
  string m_strWarden;
  Central *m_pCentral;
  Json *m_ptDatabases;

  void internal(string strPrefix, Json *ptJson, const bool bResponse);

  public:
