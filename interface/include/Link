#ifndef _RADIAL_LINK_
#define _RADIAL_LINK_
// {{{ includes
#include "Interface"
// }}}
extern "C++"
{
namespace radial
{
// {{{ defines
#define RADIAL_LINK_UNKNOWN 0
#define RADIAL_LINK_SLAVE 1
#define RADIAL_LINK_MASTER 2
// }}}
// {{{ structs
struct radialLink
{
  bool bAuthenticated;
  int fdSocket;
  list<string> responses;
  size_t unUnique;
  SSL *ssl;
  string strBuffers[2];
  string strNode;
  string strPort;
  string strServer;
};
// }}}
// {{{ Link
class Link : public Interface
{
  protected:
  bool m_bOnline;
  bool m_bUpdate;
  list<radialLink *> m_links;
  string m_strMaster;
  string m_strPassword;
  string m_strServer;
  size_t m_unLink;
  Json *m_ptLink;

  size_t add(list<radialLink *> &links, radialLink *ptLink);

  public:
  Link(string strPrefix, int argc, char **argv, void (*pCallback)(string, Json *, const bool));
  ~Link();
  void process(string strPrefix);
};
// }}}
}
}
#endif
